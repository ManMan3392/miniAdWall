{
  "openapi": "3.0.3",
  "info": {
    "title": "mini-adwall API",
    "version": "1.0.0",
    "description": "根据现有 Express 路由抽取的初版 OpenAPI 规范。"
  },
  "servers": [{ "url": "http://localhost:3000" }],
  "paths": {
    "/api/health": {
      "get": {
        "summary": "健康检查",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer" },
                    "data": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/ad-types": {
      "get": {
        "summary": "获取启用广告类型列表",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": { "type": "integer" },
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/AdType" }
                    }
                  }
                }
              }
            }
          },
          "500": { "description": "查询广告类型失败" }
        }
      }
    },
    "/api/form-config": {
      "get": {
        "summary": "获取广告类型表单配置",
        "parameters": [
          {
            "in": "query",
            "name": "type_code",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "in": "query",
            "name": "config_key",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "成功或默认配置",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/FormConfigResponse" }
              }
            }
          },
          "400": { "description": "缺少 type_code" },
          "500": { "description": "查询配置失败" }
        }
      }
    },
    "/api/videos/upload": {
      "post": {
        "summary": "上传视频文件并解析信息",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "video": { "type": "string", "format": "binary" },
                  "type_id": { "type": "integer" }
                },
                "required": ["video"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "上传成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/VideoUploadResponse" }
              }
            }
          },
          "400": { "description": "校验或缺文件错误" },
          "500": { "description": "视频解析失败" }
        }
      }
    },
    "/api/ads": {
      "post": {
        "summary": "创建广告",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdCreateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "创建成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdCreateResponse" }
              }
            }
          },
          "400": { "description": "缺少必填字段" },
          "500": { "description": "创建广告失败" }
        }
      },
      "get": {
        "summary": "分页获取广告列表",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": { "type": "integer", "default": 1 }
          },
          {
            "in": "query",
            "name": "size",
            "schema": { "type": "integer", "default": 10 }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdListResponse" }
              }
            }
          },
          "500": { "description": "获取广告列表失败" }
        }
      }
    },
    "/api/ads/{id}/price": {
      "put": {
        "summary": "更新广告出价并返回位置变化",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdPriceUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdPriceUpdateResponse"
                }
              }
            }
          },
          "400": { "description": "缺少 price" },
          "404": { "description": "广告不存在" },
          "500": { "description": "更新出价失败" }
        }
      }
    },
    "/api/ads/{id}": {
      "put": {
        "summary": "部分更新广告字段",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdPartialUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "更新成功" },
          "400": { "description": "无更新字段" },
          "500": { "description": "更新失败" }
        }
      },
      "delete": {
        "summary": "删除广告",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "删除成功" },
          "500": { "description": "删除失败" }
        }
      }
    },
    "/api/ads/{id}/copy": {
      "post": {
        "summary": "复制广告",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "复制成功",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AdCopyResponse" }
              }
            }
          },
          "404": { "description": "源广告不存在" },
          "500": { "description": "复制失败" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AdType": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "type_code": { "type": "string" },
          "type_name": { "type": "string" }
        }
      },
      "FormConfigResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer" },
          "data": { "type": "object" }
        }
      },
      "VideoUploadResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer" },
          "data": {
            "type": "object",
            "properties": {
              "videoId": { "type": "string" },
              "url": { "type": "string" },
              "duration": { "type": "integer" },
              "resolution": { "type": "string" },
              "previewUrl": { "type": ["string", "null"] }
            }
          }
        }
      },
      "AdCreateRequest": {
        "type": "object",
        "required": [
          "publisher",
          "title",
          "content",
          "heat",
          "price",
          "landing_url",
          "type_id"
        ],
        "properties": {
          "publisher": { "type": "string" },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "heat": { "type": "integer" },
          "price": { "type": "number" },
          "landing_url": { "type": "string" },
          "type_id": { "type": "integer" },
          "video_ids": {
            "oneOf": [
              { "type": "array", "items": { "type": "string" } },
              { "type": "string" }
            ]
          },
          "ext_info": { "type": "object" }
        }
      },
      "AdCreateResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer" },
          "data": {
            "type": "object",
            "properties": {
              "ad_id": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      },
      "AdListResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer" },
          "data": {
            "type": "object",
            "properties": {
              "page": { "type": "integer" },
              "size": { "type": "integer" },
              "list": { "type": "array", "items": { "type": "object" } }
            }
          }
        }
      },
      "AdPriceUpdateRequest": {
        "type": "object",
        "required": ["price"],
        "properties": { "price": { "type": "number" } }
      },
      "AdPriceUpdateResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer" },
          "data": {
            "type": "object",
            "properties": {
              "adId": { "type": "string" },
              "oldIndex": { "type": "integer" },
              "newIndex": { "type": "integer" },
              "affectedAdIds": {
                "type": "array",
                "items": { "type": "string" }
              },
              "message": { "type": "string" }
            }
          }
        }
      },
      "AdPartialUpdateRequest": {
        "type": "object",
        "properties": {
          "publisher": { "type": "string" },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "heat": { "type": "integer" },
          "price": { "type": "number" },
          "landing_url": { "type": "string" },
          "ext_info": { "type": "object" },
          "video_ids": { "type": "string" }
        }
      },
      "AdCopyResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer" },
          "data": {
            "type": "object",
            "properties": {
              "ad_id": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
